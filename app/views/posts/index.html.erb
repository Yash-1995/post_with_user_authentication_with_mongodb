<h1 class="mb-4">All Posts</h1>

<%= link_to "New Post", new_post_path, class: "btn btn-success mb-3" %>

<% @posts.each do |post| %>
  <div class="card mb-3">
    <div class="card-body">
      <h5 class="card-title"><%= link_to post.title, post_path(post) %></h5>
      <p class="card-text"><%= truncate(post.content, length: 100) %></p>
      <small class="text-muted">Posted by <%= post.user.email %></small>
    </div>
  </div>
<% end if @posts.any? %>